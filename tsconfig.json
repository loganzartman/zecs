{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,

    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "example/**/*.ts",
    "example/**/*.js"
  ]
}
